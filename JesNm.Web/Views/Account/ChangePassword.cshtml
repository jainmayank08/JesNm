@model JesNm.Web.Models.Account.ChangePasswordViewModel
@using Abp.Web.Mvc.Extensions

@section Scripts
{
    @Html.IncludeScript("~/Views/Account/ChangePassword.js")
}

<div class="container">
    <div id="ChangePasswordArea" class="row">
        <div class="col-lg-12">
            <div class="well bs-component">
                <form id="LoginForm" class="form-horizontal" method="POST">
                    <fieldset>
                        <legend>@L("Change Password")</legend>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="text" class="form-control" id="EmailAddressInput" placeholder="User name or email" required maxlength="@JesNm.Users.User.MaxEmailAddressLength">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="password" class="form-control" id="CurrentPasswordInput" placeholder="Current Password" required maxlength="@JesNm.Users.User.MaxPlainPasswordLength">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="password" class="form-control" id="NewPasswordInput" placeholder="New Password" required maxlength="@JesNm.Users.User.MaxPlainPasswordLength">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <button id="ChangePasswordButton" type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> @L("Change Password")</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>